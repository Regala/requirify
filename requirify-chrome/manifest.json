{
  "manifest_version": 3,
  "name": "Requirify - debug fixed",
  "version": "3.0.0",
  "description": "require('') in chrome devtools",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png", 
      "38": "icons/icon38.png"
    },
    "default_title": "Requirify (Click to activate for this tab)"
  },
  "background": { "scripts": ["js/background.js"] },
  "content_security_policy": "script-src 'self' https://raw.githubusercontent.com/Regala/requirify/master/requirify-browser.js; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ]

}
